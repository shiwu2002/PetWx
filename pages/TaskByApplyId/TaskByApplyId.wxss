/* pages/TaskByApplyId/TaskByApplyId.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading-container, .error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.loading-text, .error-text {
  font-size: 28rpx;
  color: #666;
}

.error-text {
  color: #e53e3e;
}

.task-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.task-header {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 30rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.task-row {
  display: flex;
  margin-bottom: 25rpx;
}

.task-row:last-child {
  margin-bottom: 0;
}

.task-label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
  flex-shrink: 0;
}

.task-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.form-container {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.form-header {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 30rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-block {
  margin-bottom: 30rpx;
}

.form-row {
  margin-bottom: 35rpx;
  display: flex;
  flex-direction: column;
}

.form-row:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.picker-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background: #fafafa;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

.form-input {
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

.form-note {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f0f8ff;
  border-radius: 10rpx;
  border-left: 6rpx solid #667eea;
}

.note-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}