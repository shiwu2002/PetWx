  font-size: 24rpx;

  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);

  color: white;

  border-radius: 40rpx;

  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);

  border: none;

}



.user-profile-card:hover {

  transform: translateY(-4rpx);

  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);

}



.profile-header {

  display: flex;

  align-items: center;

  gap: 32rpx;

  margin-bottom: 40rpx;

}



.avatar-section {

  position: relative;

}



