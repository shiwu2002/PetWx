  text-align: center;

}



.retry-btn {

  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);

  color: #ffffff;

  border: none;

  padding: 16rpx 40rpx;

  border-radius: 40rpx;

  font-size: 28rpx;

  font-weight: 500;

  transition: all 0.3s;

  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);

