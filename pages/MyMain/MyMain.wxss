  transform: scale(0.95);

}



.user-info {

  flex: 1;

}



.nickname {

  font-size: 40rpx;

  font-weight: bold;

  color: #2d3748;

  margin-bottom: 8rpx;

  display: block;

  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);

}



