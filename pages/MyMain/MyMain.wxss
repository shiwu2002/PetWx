/* pages/MyMain/MyMain.wxss */

page {

  background: linear-gradient(135deg, #f0f7ff 0%, #e6efff 100%);

  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;

  color: #333;

}



.main-container {

  min-height: 100vh;

  display: flex;

  flex-direction: column;

}



/* 侧边栏样式 */

.side-layout {

  display: flex;

  flex-direction: row;

  min-height: 100vh;

}



.side-nav {

  width: 160rpx;

  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);

  backdrop-filter: blur(10rpx);

  box-shadow: 2rpx 0 12rpx rgba(0, 0, 0, 0.1);

  display: flex;

  flex-direction: column;

  align-items: stretch;

  padding: 32rpx 0;

  gap: 8rpx;

  flex-shrink: 0;

  border-radius: 0 20rpx 20rpx 0;

  position: fixed;

  top: 0;

  left: 0;

  height: 100vh;

  z-index: 10;

}



.nav-header {

  padding: 24rpx 16rpx 40rpx;

  text-align: center;

  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);

  margin-bottom: 16rpx;

}



.nav-title {

  font-size: 32rpx;

  font-weight: bold;

  color: #ffffff;

  display: block;

  margin-bottom: 8rpx;

  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);

}



.nav-subtitle {

  font-size: 22rpx;

  color: rgba(255, 255, 255, 0.8);

  display: block;

}



.nav-list {

  flex: 1;

  padding: 0 8rpx;

}



.side-nav-item {

  padding: 28rpx 0;

  text-align: center;

  font-size: 26rpx;

  color: rgba(255, 255, 255, 0.8);

  cursor: pointer;

  border-left: 4rpx solid transparent;

  background: rgba(255, 255, 255, 0.1);

  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);

  font-weight: 500;

  border-radius: 0 16rpx 16rpx 0;

  margin: 0 0 4rpx 0;

  display: flex;

  flex-direction: column;

  align-items: center;

  gap: 8rpx;

}



.side-nav-item.active {

  color: #ffffff;

  background: rgba(255, 255, 255, 0.2);

  border-left: 4rpx solid #ffffff;

  font-weight: 600;

  box-shadow: 2rpx 0 12rpx rgba(255, 255, 255, 0.1);

  transform: translateX(4rpx);

}



/* 鼠标悬停高亮（仅web端有效） */

.side-nav-item:not(.active):hover {

  background: rgba(255, 255, 255, 0.15);

  color: #ffffff;

  border-left: 4rpx solid rgba(255, 255, 255, 0.5);

}



.nav-icon {

  font-size: 44rpx;

  margin-bottom: 4rpx;

  transition: all 0.2s;

}



.side-nav-item:not(.active):hover .nav-icon {

  transform: translateY(-2rpx);

}



.nav-label {

  line-height: 1.2;

}



.nav-footer {

  margin-top: auto;

  padding: 32rpx 0;

  border-top: 1rpx solid rgba(255, 255, 255, 0.2);

}



.logout-btn {

  padding: 28rpx 0;

  text-align: center;

  font-size: 26rpx;

  color: #ffd6d6;

  cursor: pointer;

  border-left: 4rpx solid transparent;

  background: rgba(255, 255, 255, 0.1);

  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);

  font-weight: 500;

  border-radius: 0 16rpx 16rpx 0;

  display: flex;

  flex-direction: column;

  align-items: center;

  gap: 8rpx;

}



.logout-btn:hover {

  background: rgba(255, 223, 223, 0.2);

  border-left: 4rpx solid #ff9a9a;

  color: #ffffff;

}



/* 右侧内容区样式 */

.side-content {

  flex: 1;

  padding: 32rpx 32rpx 32rpx 192rpx;

  overflow-y: hidden;

  background: linear-gradient(135deg, #f0f7ff 0%, #e6efff 100%);

  min-height: 100vh;

}



.content-header {

  margin-bottom: 40rpx;

  padding-bottom: 20rpx;

  border-bottom: 1rpx solid #e2e8f0;

  display: flex;

  justify-content: space-between;

  align-items: center;

}



.content-title {

  font-size: 40rpx;

  font-weight: bold;

  color: #2d3748;

  margin-bottom: 8rpx;

  display: block;

  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);

}



.content-subtitle {

  font-size: 26rpx;

  color: #718096;

  display: block;

}



/* 购物车头部操作 */

.cart-header-actions {

  display: flex;

  gap: 16rpx;

}



.clear-cart-btn {

  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);

  color: white;

  border: none;

  padding: 12rpx 24rpx;

  border-radius: 40rpx;

  font-size: 24rpx;

  font-weight: 500;

  transition: all 0.3s;

  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);

}



.clear-cart-btn:active {

