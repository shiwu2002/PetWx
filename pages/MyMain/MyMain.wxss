@media screen and (max-width: 768rpx) {

  .side-nav {

    width: 160rpx;

  }

  .side-content {

    padding: 24rpx;

  }

  .avatar {

    width: 120rpx;

    height: 120rpx;

  }

  .pet-image {

    width: 120rpx;

    height: 120rpx;

  }

  .modal {

    min-width: 85vw;

    padding: 32rpx 24rpx;

  }

}



