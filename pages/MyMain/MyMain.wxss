  background: rgba(255, 255, 255, 0.95);

  backdrop-filter: blur(10rpx);

  border-radius: 24rpx;

  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);

  padding: 32rpx;

  margin-bottom: 32rpx;

  transition: transform 0.3s, box-shadow 0.3s;

  border: 1rpx solid rgba(255, 255, 255, 0.5);

