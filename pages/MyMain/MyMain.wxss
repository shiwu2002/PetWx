  font-size: 28rpx;

  color: #718096;

  margin-bottom: 20rpx;

  display: block;

}



.edit-profile-btn {

  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);

  color: white;

  border: none;

  padding: 12rpx 32rpx;

  border-radius: 40rpx;

  font-size: 26rpx;

