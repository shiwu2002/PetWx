  text-align: center;

}



.status-badge[data-status='待审核'] {

  background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);

  color: #856404;

}



.status-badge[data-status='审核中'] {

  background: linear-gradient(135deg, #e6f7ff 0%, #bae6fd 100%);

  color: #0050b3;

}



.status-badge[data-status='已通过'] {

  background: linear-gradient(135deg, #d4edda 0%, #a3f7bc 100%);

  color: #155724;

}



.status-badge[data-status='已拒绝'] {

  background: linear-gradient(135deg, #f8d7da 0%, #fcc2c8 100%);

  color: #721c24;

}



.card-content {

  margin-bottom: 28rpx;

}



.info-section {

  margin-bottom: 32rpx;

}



.info-section:last-child {

  margin-bottom: 0;

}



.section-title {

  font-size: 28rpx;

  font-weight: bold;

  color: #2d3748;

  margin-bottom: 16rpx;

  display: block;

  padding-bottom: 12rpx;

  border-bottom: 1rpx solid #f0f0f0;

}



.info-grid {

  display: grid;

  grid-template-columns: 1fr 1fr;

  gap: 16rpx 24rpx;

}



.info-item {

  display: flex;

  flex-direction: column;

  gap: 8rpx;

}



.info-item.full-width {

  grid-column: 1 / -1;

}



.info-label {

  font-size: 24rpx;

  color: #718096;

}



.info-value {

  font-size: 26rpx;

  color: #2d3748;

  font-weight: 500;

}



.card-actions {

  display: flex;

  justify-content: flex-end;

}



.view-task-btn {

  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);

  color: #ffffff;

  border: none;

  padding: 16rpx 32rpx;

  border-radius: 40rpx;

  font-size: 28rpx;

  font-weight: 500;

  transition: all 0.3s;

  display: flex;

  align-items: center;

  gap: 12rpx;

  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);

}



.view-task-btn:active {

  transform: scale(0.96);

  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);

}



.empty-state {

  text-align: center;

  background: rgba(255, 255, 255, 0.95);

  backdrop-filter: blur(10rpx);

  border-radius: 24rpx;

  padding: 60rpx 40rpx;

  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);

  border: 1rpx solid rgba(255, 255, 255, 0.5);

}



.empty-icon {

  font-size: 120rpx;

  margin-bottom: 24rpx;

